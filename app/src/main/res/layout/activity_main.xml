<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageInicio"
            android:layout_width="332dp"
            android:layout_height="199dp"
            android:layout_gravity="center"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#ffff"

            android:text="Iniciar Session"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:hint="email@domain.com"
            android:textAlignment="center"
            android:background="@drawable/button_rounded"
            android:textColor="@color/black"
            android:layout_gravity="center"

            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/etpassword"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:hint="**my password**"
            android:textAlignment="center"
            android:background="@drawable/button_rounded"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btnIniciarCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10pt"
            android:drawableLeft="@drawable/mailblk32x32"
            android:text="Iniciar con Correo" />
        <Button
            android:id="@+id/btnCrearCuenta"
            android:text="Crear Cuenta"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/signin32x32"
            android:layout_marginHorizontal="10pt"
            android:layout_marginVertical="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
            <Button
                android:id="@+id/btnInvitado"
                android:text="Continua como Invitado"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/anonimo32x32"
                android:layout_marginHorizontal="10pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnGooglemain"
            android:text="Google"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/googleblk32x32"
            android:layout_marginHorizontal="10pt"
            android:layout_marginVertical="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>



        <TextView
            android:id="@+id/tvRespuestamain"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>